div#tasks.center-block

    div.panel-content.well(ng-if='!isAuthenticated()')
      p This is a demo page. The tasks are not saved. Please <a href="/#/sign_in">login</a> or <a href="/#/sign_up">sign up</a> to manage your tasks.


    div
      div.tasks-btns
        button.btn.btn-success(ng-click='flushCompletedTasks()' type='button') Flush completed tasks

      div.panel-content
        ul.list-group
          li.list-group-item(ng-repeat='task in tasks'
                              ng-hide='task.isArchived'
                              ng-class='{done: task.isDone}'
                              ng-click='updateDone(task)') {{task.label}}
            span.glyphicon.glyphicon-ok.pull-right(ng-show='task.isDone')

        form(ng-submit='addTask(taskToAdd)')
          input.task-input(type='text', placeholder='Task' ng-model='taskToAdd.label')
          input.task-button.btn-primary(type='submit', value='Add')